# build a json string from a project, no state and startdate
# use json.dumps to ensure making URLencode
def _buildJsonProject(project):
    data = '{id:' + json.dumps(str(project.id)) + ',name:' + json.dumps(project.name) + ',content:' + json.dumps(
        project.content) \
           + ',organiser:' + json.dumps(project.organiser) + ',target:' + json.dumps(
        str(project.target)) + ',email:' + json.dumps(project.email) \
           + ',imgfile:' + json.dumps(project.imgfile) + ',pcount:' + json.dumps(
        str(project.pcount)) + ',mcount:' + json.dumps(str(project.mcount)) + '}'
    return data


# build a json string from projects
def _buildJsonData(projects):
    return '[' + ','.join([_buildJsonProject(project) for project in projects]) + ']'


# list all projects into a json string
def list(request):
    projects = Project.objects.filter(state=True)
    return HttpResponse(_buildJsonData(projects), content_type="application/json")
