/* maincontent */
.mainjumbotron {
    background: #efeee4
}

.maincontent {
    background: #fff;
    padding: 20px;
    margin-bottom: 65px;
    border: 1px solid #e8e8e8;
    -webkit-box-shadow: 0 0 20px rgba(50, 50, 50, .1);
    -moz-box-shadow: 0 0 20px rgba(50, 50, 50, .1);
    box-shadow: 0 0 20px rgba(50, 50, 50, .1)
}

.maincontent p, .maincontent ul, .maincontent ol {
    color: #222;
    font-size: 14px;
    font-weight: 300
}

.maincontent iframe {
    margin-bottom: 17px
}

.maincontent ul {
    padding-left: 17px
}

.maincontent ol {
    padding-left: 20px
}

#content .post-text blockquote {
    position: relative;
    padding: 3% 0 3.5% 12%;
    margin-bottom: 1%;
    border-top: solid 8px #DFE7EC
}

/* footer */
footer {
    background: #4A4849;
    padding: 0;
    margin: 0;
    color: #fff;
    font-size: 12px;
    position: relative
}

footer a {
    color: #da6426
}

footer a:visited {
    color: #da6426
}

footer a:hover, footer a:focus {
    color: #c55a22
}

footer .footer-col {
    padding-top: 20px;
    padding-bottom: 20px;
}

